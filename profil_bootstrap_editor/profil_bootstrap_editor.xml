<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="editors" method="upgrade">
  <name>Editor - Bootstrap editor</name>
  <author>David Hoffmann</author>
  <creationDate>June 2014</creationDate>
  <copyright>Copyright (c) 2014 Profil PR &amp; Werbeagentur All rights reserved.</copyright>
  <license>GNU/GPL license: http://www.gnu.org/copyleft/gpl.html</license>
  <authorEmail>web@profilpr.de</authorEmail>
  <authorUrl>profilpr.de</authorUrl>
  <version>1.0</version>
  <description>PLG_PROFIL_BOOTSTRAP_EDITOR_DESCRIPTION</description>
  <files folder="site">
    <filename plugin="profil_bootstrap_editor">profil_bootstrap_editor.php</filename>
    <filename>index.html</filename>
    <filename>language/en-GB/en-GB.plg_editors_profil_bootstrap_editor.sys.ini</filename>
    <filename>language/de-DE/de-DE.plg_editors_profil_bootstrap_editor.sys.ini</filename>
    <folder>language</folder>
    <folder>js</folder>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_editors_profil_bootstrap_editor.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_editors_profil_bootstrap_editor.sys.ini</language>
    <language tag="de-DE">de-DE/de-DE.plg_editors_profil_bootstrap_editor.ini</language>
    <language tag="de-DE">de-DE/de-DE.plg_editors_profil_bootstrap_editor.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="mode" type="radio" default="1" description="PLG_PROFIL_BOOTSTRAP_EDITOR_MODE_DESCRIPTION" label="PLG_PROFIL_BOOTSTRAP_EDITOR_MODE_LABEL">
          <option value="0">PLG_PROFIL_BOOTSTRAP_EDITOR_TWO_LABEL</option>
          <option value="1">PLG_PROFIL_BOOTSTRAP_EDITOR_THREE_LABEL</option>
        </field>
        <field name="rowClasses" type="text" required="false" default="example-class, test-class" label="PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_CLASSES_LABEL" description="PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_CLASSES_DESCRIPTION" />
        <field name="rowPresets" type="text" required="false" default="['Full';12],['Half';6,6],['Third';4,4,4],['Quarter';3,3,3,3],['Large middle';2,8,2],['Large right';4,8],['Large left';8,4]" label="PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_PRESETS_LABEL" description="PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_PRESETS_DESCRIPTION" />
        <field name="addRowPosition" type="radio" default="top" label="PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_ADD_POSITION_LABEL" description="PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_ADD_POSITION_DESCRIPTION">
          <option value="top">PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_ADD_POSITION_TOP</option>
          <option value="bottom">PLG_PROFIL_BOOTSTRAP_EDITOR_ROW_ADD_POSITION_BOTTOM</option>
        </field>
        <field name="colClasses" type="text" required="false" default="example-class, test-class" label="PLG_PROFIL_BOOTSTRAP_EDITOR_COL_CLASSES_LABEL" description="PLG_PROFIL_BOOTSTRAP_EDITOR_COL_CLASSES_DESCRIPTION" />
      </fieldset>
    </fields>
  </config>
</extension>